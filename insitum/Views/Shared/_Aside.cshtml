    <!-- Left panel : Navigation area -->
<!-- Note: This width of the aside area can be adjusted through LESS variables -->
@using insitum.Utiles
@using System.Security.Claims
<aside id="left-panel">
    @{ Html.RenderPartial("_CurrentUser"); }
    <nav>

        @if (User.IsInRole(RolUsuario.Administrador))
        {
            <ul>
                <li class=" @Html.RouteIf("Index", "active")">
                    <a href="#" title="Listar trabajadores"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Consultas</span></a>
                    <ul>
                        <li class="@Html.RouteIf("Trabajador", "active")">
                            <a href="@Url.Action("ListarTrabajador", "Trabajador")" title="Listar usuarios"><i class="fa fa-lg fa-fw fa-file-text-o"></i> <span class="menu-item-parent">Trabajadores</span></a>
                        </li>
                    </ul>
                </li>
            </ul>

        }
        else
        {
            if (User.IsInRole(RolUsuario.Trabajador))
            {
                <ul>
                    <li class=" @Html.RouteIf("Proceso", "active")">
                        <a href="#" title="Listar trabajadores"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Consultas</span></a>
                        <ul>
                            <li class="@Html.RouteIf("Proceso", "active")">
                                <a href="@Url.Action("BuscarCliente", "Proceso")" title="Buscar cliente"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Buscar cliente</span></a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul>
                    <li class=" @Html.RouteIf("Cliente", "active")">
                        <a href="#" title="Listar trabajadores"><i class="fa fa-lg fa-fw fa-user"></i> <span class="menu-item-parent">Clientes</span></a>
                        <ul>
                            <li class="@Html.RouteIf("Cliente", "active")">
                                <a href="@Url.Action("ListarCliente", "Cliente")" title="Buscar cliente"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Listar</span></a>
                            </li>
                        </ul>
                    </li>
                </ul>

            }
            else
            {
                if (User.IsInRole(RolUsuario.Cliente))
                {
                    <ul>
                        <li class=" @Html.RouteIf("ClienteVista", "active")">
                            <a href="#" title="Listar trabajadores"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Consultas</span></a>
                            <ul>

                                <li class="@Html.RouteIf("ClienteVista", "active")">
                                    <a href="@Url.Action("DetalleProceso", "ClienteVista")" title="Buscar cliente"><i class="fa fa-lg fa-fw fa-search"></i> <span class="menu-item-parent">Detalle proceso</span></a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            }
        }


    </nav>
    <span class="minifyme" data-action="minifyMenu">
        <i class="fa fa-arrow-circle-left hit"></i>
    </span>
</aside>
