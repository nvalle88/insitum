@model insitum.ViewModel.AccionesViewModel			
<div id="content">
    <a href="../DetalleProceso" class="btn btn-sm btn-default"><i class="fa fa-arrow-left text-muted"></i> Regresar</a>
    
    <p class="col col-lg-12"></p>
    <div class="row">

        <div class="col-sm-12">

            <div class="well">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10">
                        <h1 class="page-title txt-color-blueDark">
                            <i class="glyphicon glyphicon-retweet">  </i>
                            &nbsp; Detalle del proceso
                            <span>

                            </span>
                        </h1>

                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
                        <!-- Button trigger modal -->
                        <a href="../../Reportes/ReporteClientes/@Model.Proceso.NIP" class="btn btn-info btn-lg pull-right header-btn hidden-mobile"><i class="fa fa-print fa-lg"></i>&nbsp; Imprimir</a>
                    </div>
                </div>
                <table class="table table-striped table-forum">
                    <thead>
                        <tr>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center"><a href="profile.html"><strong> NIP:&nbsp; </strong>  @Model.Proceso.NIP</a></td>
                            <td><b>Creado:&nbsp;&nbsp;</b><em>@Model.Proceso.FechaInicio.ToLongDateString()</em></td>
                        </tr>
                        <tr>
                            <td class="text-center" style="width: 20%;">
                                <h1>
                                    <span class="semi-bold">@Model.Proceso.ApplicationUser.Nombres  @Model.Proceso.ApplicationUser.Apellidos</span>
                                    <br>
                                    <small>@Model.Proceso.ApplicationUser.Identificacion</small>
                                </h1>
                            </td>
                            <td>
                                <p class="JustifyCenter">
                                    @Model.Proceso.Detalle
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <p class="col col-lg-12"></p>
    <!-- end row -->
    <!-- row -->
    <div class="alert alert-block alert-info">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
        <p>
            Acciones del proceso actual
        </p>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="well well-sm">
                <h2 class="row-seperator-header"><i class="fa fa-th-list"></i> Acciones </h2>
                <div class="smart-timeline">

                    <ul class="smart-timeline-list">

                        @foreach (var item in Model.ListaAcciones)
                        {

                            <li>
                                <div class="smart-timeline-icon">
                                    <i class="fa fa-file-text"></i>
                                </div>
                                <div class="smart-timeline-time">
                                    <small>   @item.FechaInicio.ToLongDateString()</small>
                                </div>
                                <div class="smart-timeline-content">
                                    <p>
                                        <a href="javascript:void(0);"><b><u> Detalle de la acci&oacute;n</u></b> </a>
                                    </p>
                                    <p>
                                        @item.Detalle
                                    </p>
                                </div>
                                <hr />
                            </li>

                        }
                    </ul>

                </div>
                <!-- END Timeline Content -->

            </div>

        </div>

    </div>
</div>
<!-- END MAIN CONTENT -->