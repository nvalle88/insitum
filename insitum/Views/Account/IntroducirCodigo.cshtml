@model insitum.ObjectModel.RecuperarContrasenaRequest
@{
    ViewBag.Title = "Registrarse";
}
<div id="content" class="container">
   
    <div class="row">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
                <div class="alert alert-block alert-info">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> Informaci&oacute;n</h4>
                    <p>
                        *Ingrese el <b>código que recibió</b> en el correo electrónico <b>@Model.Email</b>!!!
                    </p>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-2">&nbsp;</div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                <div class="center-block no-padding">
                    <div class="well no-padding">
                        <form action="@Url.Action("IntroducirCodigo", "account")" method="POST" id="login-form" class="smart-form client-form">
                            @Html.HiddenFor(model => model.Email)
                            <header>
                                @*<p class="text-center"> Verificar código para el usuario <b> @Model.Email</b></p>*@
                                
                                <img src="~/Imagenes/Logo_1.png" />
                            </header>
                            @Html.AntiForgeryToken()
                            @Html.ValidationBootstrap()
                            <fieldset>
                                <section>
                                    <label class="label">@Html.DisplayNameFor(model => model.Codigo)</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        <input name="Codigo">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Por favor entre el código que se le a enviado al correo</b>
                                    </label>
                                </section>
                            </fieldset>
                            <footer>

                                <button type="submit" class="btn btn-primary">
                                    Aceptar
                                </button>
                                @Html.ActionLink("Cancelar", "Login", "Account", new { @class = "btn btn-default" })

                            </footer>
                        </form>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>

        @section pagespecific{
            <script type="text/javascript">
                $(function () {
                    // Validation
                    $("#login-form").validate({
                        // Rules for form validation
                        rules: {
                            Codigo: {
                                required: true
                            },
                        },
                        // Messages for form validation
                        messages: {
                            Codigo: {
                                required: 'Por favor entre el código que se le envió al correo electrónico'
                            },
                        },

                        // Do not change code below
                        errorPlacement: function (error, element) {
                            error.insertAfter(element.parent());
                        }
                    });
                });
            </script>
        }
