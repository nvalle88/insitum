@model insitum.ObjectModel.RecuperarContrasenaRequest
@{
    ViewBag.Title = "Registrarse";
}


<div id="content" class="container">



    <div class="row">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
                <div class="alert alert-block alert-info">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> Informaci&oacute;n</h4>
                    <p class="JustifyFull">
                        La contraseña debe tener de 6 a 32 caracteres y
                        debe incluir al menos 1 letra mayúscula, 1 letra minúscula, 1 número y 1 caracter especial(* / # % & ) .
                        La contraseña DISTINGUE entre mayúsculas y minúsculas.<b> Ejemplo: paSsWorD25**</b>   ...
                    </p>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-2">&nbsp;</div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                    <div class="center-block no-padding">
                        <div class="well no-padding">
                            <form action="@Url.Action("IngresarContrasena", "account")" method="POST" id="login-form" class="smart-form client-form">
                                <header>
                                    @*<p class="text-center"> Nueva contraseña</p>*@
                                    <img src="~/Imagenes/Logo_1.png" />
                                </header>

                                @Html.AntiForgeryToken()
                                @Html.ValidationBootstrap()
                                @Html.HiddenFor(model => model.Email)
                                <fieldset>
                                    <section>
                                        <label class="label">@Html.DisplayNameFor(model => model.Contrasena)</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            <input type="password" name="Contrasena">
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i>Por favor entre su nueva contraseña</b>
                                        </label>
                                    </section>

                                    <section>
                                        <label class="label">@Html.DisplayNameFor(model => model.ConfirmarContrasena)</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            <input type="password" name="ConfirmarContrasena">
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i>Por favor entre la confirmación de su nueva contraseña</b>
                                        </label>
                                    </section>

                                </fieldset>
                                <footer>

                                    <button type="submit" class="btn btn-primary">
                                        Aceptar
                                    </button>
                                    @Html.ActionLink("Cancelar", "Login", "Account", new { @class = "btn btn-default" })

                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

@section pagespecific{
    <script type="text/javascript">
        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    Contrasena: {
                        required: true
                    },

                    ConfirmarContrasena: {
                        required: true
                    }
                },

                // Messages for form validation
                messages: {
                    Contrasena: {
                        required: 'Por favor entre su nueva contraseña'
                    },

                    ConfirmarContrasena: {
                        required: 'Por favor entre la confirmación de su nueva contraseña'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}

