@model insitum.Models.Negocio.Proceso
<!-- MAIN CONTENT -->


<div id="content">

    <div>
        <div class="">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        Editar proceso
                    </h4>
                </div>
                <div class="">
                    <form id="login-form" method="post"  class="smart-form">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ApplicationUser.Id)
                        @Html.HiddenFor(model => model.IdProceso)
                        <fieldset>
                            <section>
                                <div class="row form-group">
                                    <label class="label col col-3">Fecha</label>
                                    <div class="col col-9">
                                        <label class="input">
                                            <input name="FechaInicio" placeholder="@Model.FechaInicio" value="@Model.FechaInicio.ToShortDateString()" readonly="readonly" class="form-control datepicker" data-dateformat='dd/mm/yy' />
                                        </label>
                                    </div>
                                </div>
                            </section>
                            <section>
                                <div class="row">
                                    <label class="label col col-3">Tipo de acci&oacute;n</label>
                                    <div class="col col-9">
                                        <label class="input">
                                            <input type="text" name="NIP" value="@Model.NIP" placeholder="Ingrese el NIP">
                                            @Html.ValidationMessageFor(model => model.NIP, "", new { @class = "text-danger" })
                                        </label>
                                    </div>
                                </div>
                            </section>
                            <section>
                                <div class="row">
                                    <div class="col col-3">Detalle</div>
                                    <div class="col col-9">
                                        <textarea rows="8" class="form-control" name="Detalle" placeholder="Detalle del proceso" required>@Model.Detalle</textarea>
                                    </div>
                                </div>
                            </section>
                        </fieldset>
                        <footer>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Guardar
                            </button>
                            <a href="../DetalleProceso/@Model.Id" type="button" class="btn btn-default">
                                Cancelar
                            </a>
                        </footer>
                    </form>

                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

</div>

@section pagespecific {

    <script type="text/javascript">

        $(document).ready(function () {

            var $orderForm = $("#login-form").validate({
                // Rules for form validation
                rules: {
                    NIP: {
                        required: true
                    },
                    FechaInicio: {
                        required: true
                    },
                    Detalle: {
                        required: true
                    },
                },

                // Messages for form validation
                messages: {
                    NIP: {
                        required: 'Por favor entre el NIP'
                    },
                    FechaInicio: {
                        required: 'Por favor entre el NIP'
                    },
                    Detalle: {
                        required: 'Por favor entre el Detalle'
                    }

                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        })
    </script>

}