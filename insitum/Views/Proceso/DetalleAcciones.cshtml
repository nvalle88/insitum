@model insitum.ViewModel.AccionesViewModel			
<div id="content">
    <a href="../DetalleProceso/@Model.Proceso.Id" class="btn btn-sm btn-default"><i class="fa fa-arrow-left text-muted"></i> Regresar</a>
    <p class="col col-lg-12"></p>
    <div class="row">

        <div class="col-sm-12">

            <div class="well">

                <table class="table table-striped table-forum">
                    <thead>
                        <tr>
                            <h2 class="row-seperator-header"><i class="glyphicon glyphicon-retweet"></i> Detalle del proceso </h2>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center"><a href="profile.html"><strong> NIP:&nbsp; </strong>  @Model.Proceso.NIP</a></td>
                            <td><b>Creado:&nbsp;&nbsp;</b><em>@Model.Proceso.FechaInicio.ToLongDateString()</em></td>
                        </tr>
                        <tr>
                            <td class="text-center" style="width: 12%;">
                                <h1>
                                    <span class="semi-bold">@Model.Proceso.ApplicationUser.Nombres  @Model.Proceso.ApplicationUser.Apellidos</span>
                                    <br>
                                    <small>@Model.Proceso.ApplicationUser.Identificacion</small>
                                </h1>
                            </td>
                            <td>
                                <p class="JustifyFull">
                                    @Model.Proceso.Detalle
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-plus">       Nueva acci&oacute;n</i> 
    </button>
    <p class="col col-lg-12"></p>
    <!-- end row -->
    <!-- row -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="well well-sm">
                <h2 class="row-seperator-header"><i class="fa fa-th-list"></i> Acciones </h2>
                <div class="smart-timeline">

                    <ul class="smart-timeline-list">

                        @foreach (var item in Model.ListaAcciones)
                        {

                            <li>
                                <div class="smart-timeline-icon">
                                    <i class="fa fa-file-text"></i>
                                </div>
                                <div class="smart-timeline-time">
                                    <small>   @item.FechaInicio.ToLongDateString()</small>
                                </div>
                                <div class="smart-timeline-content">
                                    <p>
                                        <a href="javascript:void(0);"><b> Tipo de acci&oacute;n:</b> @item.TipoAccion.Nombre  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Fecha l&iacute;mite:</b>  @item.FechaInicio.AddDays(Convert.ToDouble(item.TipoAccion.TiempoDias)).ToLongDateString()  </a>
                                    </p>
                                    <p>
                                        @item.Detalle
                                    </p>
                                    <ul class="list-inline">
                                        <li>
                                            @Html.ActionLink(" ", "Editar", new { id = item.IdAccion }, new { @class = "editar btn btn-default btn-md glyphicon glyphicon-edit", @style = "color:blue" })
                                        </li>
                                        <li>
                                            @Html.ActionLink(" ", "EliminarAccion", new { id = item.IdAccion }, new { @class = "eliminar btn btn-default btn-md glyphicon glyphicon-trash", @style = "color:red", onclick = "return confirm('Desea eliminar el registro... ?');" })
                                        </li>
                                    </ul>
                                </div>
                                <hr />
                            </li>

                        }
                    </ul>

                </div>
                <!-- END Timeline Content -->

            </div>

        </div>

    </div>

    <!-- end row -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Nueva Acci&oacute;n</h4>
                </div>
                <div class="modal-body">
                    <form method="post" action="../InsertarAccion" id="order-form" class="well col col-lg-12 smart-form padding-top-10" novalidate="novalidate">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Proceso.IdProceso)

                        <p><b>Fecha</b></p>

                        <input class="col col-lg-12 form-control datepicker hasDatepicker" type="date" data-dateformat="dd/mm/yy" name="FechaInicio" required>
                        <div class="margin-top-12">
                            <p class="col col-lg-12">&nbsp;</p>
                        </div>
                        <p><b>Tipo de acci&oacute;n</b></p>
                        @Html.DropDownList("IdTipoAccion", null, htmlAttributes: new { @class = "form-control" })
                        <div class="margin-top-12">
                            <p class="col col-lg-12">&nbsp;</p>
                        </div>
                        <p><b>Detalle</b></p>
                        <textarea rows="8" class="form-control" name="Detalle" placeholder="Detalle del proceso" required></textarea>
                        <div class="margin-top-10">
                            <button type="submit" class="btn btn-sm fa fa-save btn-primary pull-right">
                                &nbsp; Guardar
                            </button>
                        </div>
                    </form>


                    <div class="row">
                        <div class="col-md-12">
                           
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>
                   
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
<!-- END MAIN CONTENT -->