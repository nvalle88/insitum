	@model insitum.Models.ApplicationUser
        <!-- MAIN CONTENT -->
<div id="content">


    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-12">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa-fw fa fa-search"></i>
               Buscar
                <span>
                    >
                    Cliente
                </span>
            </h1>
        </div>
    </div>

    <div class="alert alert-block alert-info">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
        <p>
            Ingrese la identificaci&oacute;n del cliente!
        </p>
    </div>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false"
                     data-widget-colorbutton="false"
                     data-widget-togglebutton="false"
                     data-widget-deletebutton="false"
                     data-widget-fullscreenbutton="false"
                     data-widget-collapsed="false"
                     data-widget-sortable="false">
                    <header>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">

                            <form id="order-form" method="post" class="smart-form" novalidate="novalidate">
                                @Html.AntiForgeryToken()
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">Identificaci&oacute;n </label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" name="Identificacion" value="@Model.Identificacion" placeholder="Ingrese el nombre ">
                                            </label>
                                        </section>
                                        
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="submit" id="nuevo" class="btn btn-primary">
                                        <span class="fa fa-search"></span> Buscar
                                    </button>
                                </footer>
                            </form>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific {
    <script type="text/javascript">

        // DO NOT REMOVE : GLOBAL FUNCTIONS!

        $(document).ready(function () {


            var $orderForm = $("#order-form").validate({
                // Rules for form validation
                rules: {
                    Identificacion: {
                        required: true
                    },
                    Nombres: {
                        required: true
                    },
                    Apellidos: {
                        required: true
                    },
                    Direccion: {
                        required: true
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    PhoneNumber: {
                        required: true
                    },
                },

                // Messages for form validation
                messages: {
                    Identificacion: {
                        required: 'Por favor entre la identificación'
                    },
                    Nombres: {
                        required: 'Por favor entre el nombre'
                    },
                    Apellidos: {
                        required: 'Por favor entre el apellido'
                    },
                    
                    Email: {
                        required: 'Por favor entre el correo',
                        email: 'Por favor entre un correo válido'
                    },
                    PhoneNumber: {
                        required: 'Por favor entre el teléfono'
                    },
                    Direccion: {
                        required: 'Por favor entre la dirección'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        })

    </script>
}