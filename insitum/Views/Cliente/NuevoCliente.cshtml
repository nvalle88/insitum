	@model insitum.Models.ApplicationUser
        <!-- MAIN CONTENT -->
<div id="content">

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false"
                     data-widget-colorbutton="false"
                     data-widget-togglebutton="false"
                     data-widget-deletebutton="false"
                     data-widget-fullscreenbutton="false"
                     data-widget-collapsed="false"
                     data-widget-sortable="false">
                    <header>
                        <div class="widget-toolbar"> <a href="../Cliente/ListarCliente" class="btn btn-primary"> <i class="fa fa-arrow-left"></i> <span class="hidden-mobile">Regresar</span></a> </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">

                            <form id="order-form" method="post" class="smart-form" novalidate="novalidate">
                                @Html.AntiForgeryToken()
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-lg-12">
                                            <legend><h3> Datos del cliente </h3></legend>
                                        </section>

                                    </div>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="label">Identificaci&oacute;n </label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" maxlength="13" name="Identificacion" value="@Model.Identificacion" placeholder="Ingrese el nombre ">
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Nombres</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" maxlength="100" name="Nombres" value="@Model.Nombres" placeholder="Ingrese el nombre ">

                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Apellidos</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" maxlength="100" name="Apellidos" value="@Model.Apellidos" placeholder="Ingrese el apellido">
                                            </label>
                                        </section>

                                    </div>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="label">Ciudad</label>

                                            <label class="input">
                                                @Html.DropDownList("IdCiudad", null, htmlAttributes: new { @class = "form-control" })

                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Correo</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                <input type="email" maxlength="256" name="Email" value="@Model.Email" placeholder="E-mail">
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Tel&eacute;fono</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-phone"></i>
                                                <input type="tel" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Phone" data-mask="(99) 9999-9999">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">

                                    </div>
                                    <div class="row">
                                        <section class="col col-lg-12">
                                            <label class="label">Direcci&oacute;n</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-home"></i>
                                                <input type="text" maxlength="500" name="Direccion" value="@Model.Direccion" placeholder="Ingrese la dirección">
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-lg-12">
                                            <legend><h3> Datos del conyugue </h3></legend>
                                        </section>

                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">Nombre</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" maxlength="100" name="NombresConyuge" value="@Model.NombresConyuge" placeholder="Ingrese el nombre ">

                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="label">Apellido</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" maxlength="100" name="ApellidosConyuge" value="@Model.ApellidosConyuge" placeholder="Ingrese el apellido">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">

                                        <section class="col col-4">
                                            <label class="label">Identificaci&oacute;n </label>
                                            <label class="input">
                                                <i class="icon-append fa fa-user"></i>
                                                <input type="text" maxlength="13" name="IdentificacionConyuge" value="@Model.IdentificacionConyuge" placeholder="Ingrese el nombre ">
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Correo</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                <input type="email" maxlength="256" name="CorreoConyuge" value="@Model.CorreoConyuge" placeholder="E-mail">
                                                @Html.ValidationMessageFor(model => model.CorreoConyuge, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Tel&eacute;fono</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-phone"></i>
                                                <input type="tel" name="TelefonoConyuge" value="@Model.TelefonoConyuge" placeholder="Phone" data-mask="(99) 9999-9999">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-lg-12">
                                            <legend><h3> Notificaciones por correo </h3></legend>
                                        </section>

                                    </div>
                                    <div class="row">
                                        
                                        <section class="col col-6">
                                            <label class="label">Correo notificaci&oacute;n</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                <input type="email" maxlength="256" name="CorreoNotificacion_1" value="@Model.CorreoNotificacion_1" placeholder="E-mail">
                                                @Html.ValidationMessageFor(model => model.CorreoNotificacion_1, "", new { @class = "text-danger" })
                                            </label>
                                        </section>

                                        <section class="col col-6">
                                            <label class="label">Correo notificaci&oacute;n</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                <input type="email" maxlength="256" name="CorreoNotificacion_2" value="@Model.CorreoNotificacion_2" placeholder="E-mail">
                                                @Html.ValidationMessageFor(model => model.CorreoNotificacion_1, "", new { @class = "text-danger" })
                                            </label>
                                        </section>

                                        <section class="col col-6">
                                            <label class="label">Correo notificaci&oacute;n</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                <input type="email" maxlength="256" name="CorreoNotificacion_3" value="@Model.CorreoNotificacion_3" placeholder="E-mail">
                                                @Html.ValidationMessageFor(model => model.CorreoNotificacion_1, "", new { @class = "text-danger" })
                                            </label>
                                        </section>

                                        <section class="col col-6">
                                            <label class="label">Correo notificaci&oacute;n</label>
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                <input type="email" maxlength="256" name="CorreoNotificacion_4" value="@Model.CorreoNotificacion_4" placeholder="E-mail">
                                                @Html.ValidationMessageFor(model => model.CorreoNotificacion_1, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>

                                </fieldset>
                                <footer>
                                    <button type="submit" id="nuevo" class="btn btn-primary">
                                        <span class="fa fa-save"></span> Guardar
                                    </button>
                                </footer>
                            </form>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific {
    <script type="text/javascript">

        // DO NOT REMOVE : GLOBAL FUNCTIONS!

        $(document).ready(function () {


            var $orderForm = $("#order-form").validate({
                // Rules for form validation
                rules: {
                    Identificacion: {
                        required: true
                    },
                    Nombres: {
                        required: true
                    },
                    Apellidos: {
                        required: true
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                },

                // Messages for form validation
                messages: {
                    Identificacion: {
                        required: 'Por favor entre la identificación'
                    },
                    Nombres: {
                        required: 'Por favor entre el nombre'
                    },
                    Apellidos: {
                        required: 'Por favor entre el apellido'
                    },
                    Email: {
                        required: 'Por favor entre el correo',
                        email: 'Por favor entre un correo válido'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        })

    </script>
}